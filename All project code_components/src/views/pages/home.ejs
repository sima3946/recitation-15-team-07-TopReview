  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>
  <body>
    <div class="container">
      <h1 class="mt-5 text-black text-center">Popular Movies</h1>
      <div class="card-container d-flex flex-wrap justify-content-center">
        <% for (let i = 0; i < movies.length; i++) { %>
          <div class="col-md-4 mb-4">
            <div class="card">
              <a href="/movies/<%= movies[i].id %>">
                <img class="card-img-top" src="<%= movies[i].image_url %>" alt="Poster for <%= movies[i].name %>">
                <div class="card-body">
                  <h5 class="card-title text-center"><%= movies[i].name %></h5>
                  <p class="card-text"><%= movies[i].description %></p>
                </div>
              </a>
            </div>
          </div>
        <% } %>
      </div>
    </div>
  </body>





