<%- include ('../partials/header') %>

<style>
    .flex {
        flex: 0 0 100%;
        height: 100vh;
    }

    .card-photo {
        aspect-ratio: 2 / 3;
        margin-top: 1vh;
        margin-bottom: 2vh;
        margin-left: 4vw;
        height: 50vw;
    }
    .card-review {
        margin-left: 3vw;
        margin-top: 2vh;
        margin-bottom: 2vh;
        height: 10vh;
        width: 52vw;
    }

    .column-left-sm {
        float: left;
        width: 3vw;
    }
    .column-left-large{
        float: left;
        width: 30vw;
    }
    .column-right {
        float: right;
        width: 57vw;
    }

    .card-photo > img {
        aspect-ratio: 2 / 3;
        margin-top: 2vh;
        margin-left: 2vw;
        margin-right: 2vw;
        margin-bottom: 2vh;
    }
    
    .btn {
        margin-top: 2vh;
        margin-left: 1vw;
    }
    
    .text {
        color: white;
        margin-left: 2vw;
        margin-top: 1vh;
    }
</style>

<div class="container-fluid gradient-custom flex">
    <div class="column-left-sm">
        <a class="btn bg-dark" href="/home" role="button">
            <i class="bi bi-arrow-return-left" style="color: white;"></i>
        </a>
    </div>
    <div class="column-left-large">
        <div class="card card-photo bg-dark">
            <img src="<%= movie[0].image_url %>">
        </div>
    </div>
    <div class="column-right">
        <div class="card card-review bg-dark">
            <h2 class="fw-bold mb-2 text-uppercase title text">TMDB</h2>
        </div>
        <div class="card card-review bg-dark">

        </div>
    </div>
</div>

<%- include ('../partials/footer') %>