<%- include ('../partials/header') %>
<div class="container-fluid gradient-custom flex">
    <div class="column-left-sm">
        <a class="btn back-btn bg-dark" href="/home" role="button">
            <i class="bi bi-arrow-return-left" style="color: white;"></i>
        </a>
    </div>
    <div class="column-left-large">
        <div class="card card-photo bg-dark">
            <img src="<%= movie[0].image_url %>">
        </div>
    </div>
    <div class="column-right">
        <div class="card card-review bg-dark">
            <div class="card-head" style="float:left">
                <h2 class="fw-bold mb-2 text-uppercase title text">TMDB</h2>
            </div>
            <div class="card-head" style="float: right;">
                <a class="btn btn-primary dd-button" style="background-color: black;" data-bs-toggle="collapse" href="#collapseText" role="button" aria-expanded="false" aria-controls="collapseText">
                    <i class="bi bi-arrow-down dropdown-arrow" style="color: white;"></i>
                </a>
            </div>
        </div>
        <div class="collapse" id="collapseText">
            <div class="card card-body bg-dark" style="color: white;">
                This is the expanded text
            </div>
        </div>
        <div class="card card-review bg-dark">

        </div>
    </div>
</div>

<%- include ('../partials/footer') %>